    
 <div class="container">
        <div style="align-items: center;">
          <div class="cardInput">
              
  <form class="form-horizontal"   method="POST" enctype="multipart/form-data"  >
 
  <span></span>
   
     <div class="card-header-input">
              <h3>Modify Expense</h3>
      </div>
       <div>   {{#if message}}
             <p class="alert alert-warning">{{message}}</p>
            {{/if}}
        </div>
       <div class="form-group">
        <label class="col-sm-3 control-label" for="expense-type">Expense Type</label>
        <div class="col-sm-7">
              <select name="expType" id="expType" class="form-control" required="true" >
                        <option value="">Select one</option>
                          {{#each expenseType}}
                            <option value={{this}}>{{this}}</option>
                         {{/each}}
                        
                 </select> 
         </div>
      </div>
        
        
  <div class="form-group">
        <label class="col-sm-3 control-label" for="Expense-Date">Expense Date</label>
        <div class="col-sm-7">
         <input type="date" class= "form-control" name="expDate" id="datePicker" autocomplete="off" value={{expdata.expDate}} max={{today}}  >
        </div>
  </div>
      
  <div class="form-group">
        <label class="col-sm-3 control-label" for="Expense-Receipt">Expense Receipt </label>
        <div class="col-sm-7">
            <input type="file" class="form-control-file" id="expReceipt" name="expReceipt" value="{{expdata.expReceipt}}">
                 {{#if expdata.expReceipt}} 
                <a href="/public/uploads/{{expdata.expReceipt}}" target="_blank"><span class="alert alert-info">{{expdata.expReceipt}}</span> </a>
                 {{/if}}
       </div>
  </div>
     
     <div class="form-group">
        <label class="col-sm-3 control-label" for="Expense-Amount">Expense Amount </label>
        <div class="col-sm-7">
           <input type="text"   class="form-control"  value= "{{expdata.expAmount}}"  autocomplete="off" name="expAmount" required="true">
      </div>
     </div> 
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
                  <input type="submit" value="Update" class="btn  grid_button" name="submit" formaction="editExpense" >
                  <span >   </span>
                   <input class="btn  grid_button" type="reset" value="Reset" >
                </div>
               </div>
            </div>
   <input type="hidden" value={{expdata._id}} name="_id" >
    <input type="hidden" value={{expdata.expType}}  id="hdnexpType">
  
   </div>
    </form>
        </div>
      </div>
      </div>
  
 
<script type="text/javascript">
  $(document).ready(function() {
    //console.log={{expdata.expType}};
let hdnExp= document.getElementById("hdnexpType");
document.getElementById("expType").value =hdnExp.value;
  });
         </script>

