

<div class="container">
     <div style="padding-bottom: 10px;"></div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end" style="padding-bottom: 10px;">
                        <a href="addNewExpense"><button type="button" class="btn btn-info "> Add New Expense</button></a>
                    </div>
           <div>
              <table id="example_table" class="table table-striped table-bordered  " cellspacing="0" >
                 <thead>
                     <tr  >
                   
                        <th class="th-sm">Expense Type</th>
                        <th class="th-sm">Expense Date</th>
                        <th class="th-sm" >    Receipt
                            </th>
                        <th class="th-sm">Amount</th>
                        <th class="th-sm">Actions</th>
                 </tr>
                </thead>
               <tbody >
                {{#each empExpenseList}}
                   <tr >
                         <td>{{expType}}</td>
                        <td > {{expDate}}</td>
                        <td  > 
                             {{#if expReceipt}}
                                  <a href="/uploads/{{expReceipt}}" target="_blank" ><span class="fa fa-file"></span> </a>

                             {{/if}}</td>
                        <td> ${{expAmount}}</td>
                        <td>
						<a href="editExpense?id={{_id}}" ><button type="button" class="btn btn-info btn-rounded">Edit</button></a>
                            &nbsp;&nbsp;
                           <a href="/delete?id={{_id}}", onclick='return confirm("You are going to delete this record. Continue?")')> 
                           <button type="button" class="btn btn-info btn-rounded">Delete</button></a>
                          
                        </td>
                    </tr>
                {{/each}}         
                </tbody>
            </table>
        </div>
        </div>
       </div>


    <script>
      $(document).ready( function () {
          $('#example_table').DataTable({ 
             "aaSorting": [],
              columnDefs:
