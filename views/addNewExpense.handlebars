
 <div class="container">
        <div style="align-items: center;">
          <div class="cardInput">
  <form class="form-horizontal"   method="POST" enctype="multipart/form-data">
 <fieldset>
  <span></span>
   
     <div class="card-header-input">
              <h3>Add New Expense</h3>
      </div>
       <div>   {{#if message}}
             <p class="alert alert-warning">{{message}}</p>
            {{/if}}
        </div>
       <div class="form-group">
        <label class="col-sm-3 control-label" for="expense-type">Expense Type</label>
        <div class="col-sm-7">
              <select name="expType" id="expType" class="form-control" required="true" >
                        <option value="Select">Select one</option>
                          {{#each expenseType}}
                            <option value={{this}}>{{this}}</option>
                              {{/each}}
               </select> 
         </div>
      </div>
        
        
  <div class="form-group">
        <label class="col-sm-3 control-label" for="Expense-Date">Expense Date</label>
        <div class="col-sm-7">
         <input type="date" class= "form-control" name="expDate" id="datePicker" autocomplete="off" max={{today}}  >
                   </div>
      </div>
      
       <div class="form-group">
        <label class="col-sm-3 control-label" for="Expense-Receipt">Expense Receipt </label>
        <div class="col-sm-7">
  <input type="file" placeholder= "Choose file"  id='expReceipt' name="expReceipt"  >
                   </div>
      </div>    
             <div class="form-group">
        <label class="col-sm-3 control-label" for="Expense-Amount">Expense Amount </label>
        <div class="col-sm-7">
    <input type="text"   class="form-control" placeholder= "Enter Amount" required name="expAmount">
                   </div>
      </div> 
               <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
                  <input type="submit" value="Create" class="btn  login_btn" name="submit"  formaction="addNewExpense">
                  <span >   </span>
                   <input class="btn  login_btn" type="reset" value="Reset" >
                </div>
               </div>
            </div>

   </div></fieldset>
    </form>
        </div>
      </div>
      </div>
  


